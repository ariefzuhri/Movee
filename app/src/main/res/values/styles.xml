<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ClickableTextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="fabSize">mini</item>
        <item name="elevation">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/blue</item>
    </style>

    <style name="ImageView">
        <item name="android:src">@drawable/ic_no_pic</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_search_view</item>
        <item name="android:theme">@style/SearchViewTheme</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TransparentText">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:textStyle">bold</item>
    </style>
</resources>